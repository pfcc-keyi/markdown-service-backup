# Service Configuration
SERVICE_NAME=markdown-service
SERVICE_VERSION=1.0.0
PORT=8002
HOST=0.0.0.0

# Development Mode
DEV_MODE=true

# API Keys and Security
MARKER_API_KEY=your-marker-api-key-here
SERVICE_TOKEN=your-service-token-here  # For service-to-service authentication

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# File Processing
TEMP_DIR=/tmp/markdown-service
MAX_FILE_SIZE=52428800  # 50MB

# API Configuration
REQUEST_TIMEOUT=300  # 5 minutes
POLL_INTERVAL=2
MAX_POLLS=300

# Health Check
HEALTH_CHECK_TIMEOUT=10

# Rate Limiting
RETRY_ATTEMPTS=3
RETRY_DELAY=1.0 